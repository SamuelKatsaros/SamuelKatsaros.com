        });
        this.classList.remove('text-neutral-500', 'hover:text-neutral-700');
        this.classList.add('text-neutral-800');
      });
    });

    // Initialize Lorenz Attractor visualization
    const canvas = document.getElementById('chaosCanvas');
    if (canvas) {
      const ctx = canvas.getContext('2d');
      
      // Set canvas dimensions with higher resolution for sharp rendering
      const dpr = window.devicePixelRatio || 1;
      const rect = canvas.getBoundingClientRect();
      
      // Set canvas size to match container
      canvas.style.width = '100%';
      canvas.style.height = '100%';
      canvas.width = rect.width * dpr;
      canvas.height = rect.height * dpr;
      
      // Scale context for retina display
      ctx.scale(dpr, dpr);
      
      // Lorenz attractor parameters
      const sigma = 10;
      const rho = 28;
      const beta = 8/3;
      const dt = 0.005;
      
      // Initial conditions
      let x = 0.1;
      let y = 0;
      let z = 0;
      
      // Adjust scaling to fit within canvas bounds with padding
      const padding = 40; // Add padding to prevent cutting off
      const maxLorenzExtent = 30; // Approximate maximum extent of Lorenz attractor
      const scale = (Math.min(rect.width, rect.height) - padding) / (2 * maxLorenzExtent);
      const translateX = rect.width / 2;
      const translateY = rect.height / 2;
      
      // Colors and styling
      ctx.lineWidth = 0.75;
      ctx.strokeStyle = '#5a5a5a';
      
      // Previous point for line drawing
      let prevX = x;
      let prevY = y;
      
      // Start with a clear canvas
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      
      // Start the path
      ctx.beginPath();
      ctx.moveTo(translateX + (x * scale), translateY - (y * scale));
      
      // Initialize and start animation
      let frameCount = 0;
      
      function animate() {
        // Calculate next points in the Lorenz system (10 iterations per frame)
        for (let i = 0; i < 10; i++) {
          // Store previous values
          prevX = x;
          prevY = y;
          
          // Calculate next point using Lorenz equations
          const dx_val = sigma * (y - x) * dt;
          const dy_val = (x * (rho - z) - y) * dt;
          const dz_val = (x * y - beta * z) * dt;
          
          x += dx_val;
          y += dy_val;
          z += dz_val;
          
          // Draw line from previous to current point
          ctx.beginPath();
          ctx.moveTo(translateX + (prevX * scale), translateY - (prevY * scale));
          ctx.lineTo(translateX + (x * scale), translateY - (y * scale));
          ctx.stroke();
        }
        
        frameCount++;
        
        // Clear canvas and restart after 3000 frames or if the pattern gets too large
        if (frameCount > 3000 || Math.abs(x) > 100 || Math.abs(y) > 100) {
          ctx.clearRect(0, 0, canvas.width, canvas.height);
          x = 0.1 * (Math.random() - 0.5); // Slightly different initial condition
          y = 0;
          z = 0;
          frameCount = 0;
        }
        
        requestAnimationFrame(animate);
      }
      
      // Start the animation
      animate();
    }
